<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_repositories"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/activity_margin"
    tools:context="piotrpakula.googlegithubrepositoriesviewer.view.activity.RepositoriesActivity">

    <ProgressBar
        android:id="@+id/repositories_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/progress_bar_top_margin"
        android:layout_alignParentTop="true" />

    <ListView
        android:id="@+id/repositories_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/repositories_progress_bar"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
